{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm ci",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/[...path].py",
      "use": "@vercel/python"
    }
  ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/[...path].py" },
      { "src": "/(.*)", "dest": "client/build/$1" }
    ]
}
